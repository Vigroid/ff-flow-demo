<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/teal_200"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="@string/liked_items_empty"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_clear_all"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:text="@string/clear_all_liked_items"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_add_all"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/add_all_liked_items"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_add_red"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="@string/like_red_items"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>